{
  "name": "@mike-north/js-lib-renovate-config",
  "version": "0.0.0-development",
  "description": "Renovate bot sharable config for JS libraries",
  "repository": "https://github.com/mike-north/js-lib-renovate-config",
  "author": "Mike North (https://mike.works) <michael.l.north@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "echo 'no tests'",
    "travis-deploy-once": "travis-deploy-once",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@commitlint/travis-cli": "^7.2.1",
    "@mike-north/js-lib-semantic-release-config": "^1.0.0",
    "husky": "^1.1.3",
    "semantic-release": "^15.10.8",
    "travis-deploy-once": "^5.0.9"
  },
  "renovate-config": {
    "default": {
      "extends": [
        "config:js-lib",
        ":pinOnlyDevDependencies",
        ":automergePatch",
        ":automergeMinor",
        ":semanticCommits"
      ],
      "timezone": "America/Los_Angeles",
      "schedule": [
        "after 3am",
        "before 8am"
      ],
      "packageRules": [
        {
          "packageNames": [
            "typescript",
            "tslint",
            "typedoc"
          ],
          "groupName": "typescript packages",
          "groupSlug": "typescript",
          "minor": {
            "automerge": false
          }
        },
        {
          "packagePatterns": [
            "^@types/"
          ],
          "groupName": "ambient types",
          "groupSlug": "ambient-types",
          "minor": {
            "automerge": false
          }
        },
        {
          "packageNames": [
            "semantic-release"
          ],
          "packagePatterns": [
            "^@semantic-release/"
          ],
          "extends": ["schedule:weekends"]
        },
        {
          "packageNames": [
            "broccoli-asset-rev",
            "ember-cli",
            "ember-cli-dependency-checker",
            "ember-cli-eslint",
            "ember-cli-eslint",
            "ember-qunit",
            "ember-cli-sri",
            "qunit-dom",
            "ember-cli-fastboot",
            "ember-cli-htmlbars-inline-precompile",
            "ember-cli-inject-live-reload",
            "ember-cli-qunit",
            "ember-cli-shims",
            "ember-cli-release",
            "ember-cli-uglify",
            "ember-disable-prototype-extensions",
            "ember-export-application-global",
            "ember-load-initializers",
            "ember-resolver",
            "ember-source",
            "eslint-plugin-ember",
            "eslint-plugin-node",
            "loader.js",
            "ember-cli-htmlbars",
            "ember-cli-babel"
          ],
          "groupName": "stable ember infrastructure",
          "groupSlug": "stable-ember-infra",
          "major": {
            "automerge": true
          }
        }
      ]
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "./node_modules/.bin/commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "extends": "@mike-north/js-lib-semantic-release-config"
  }
}
